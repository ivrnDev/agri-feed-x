<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customize.CustomizeFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetBtn"
        android:layout_width="344dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="164dp"
        android:text="Reset"
        android:textSize="17sp"
        android:textAllCaps="true"
        app:backgroundTint="@color/orange"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutBtn"
        android:layout_width="344dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/error_color"
        android:text="Logout"
        android:textSize="17sp"
        app:cornerRadius="15dp"
        android:textAllCaps="true"
        app:backgroundTint="@color/error_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetBtn"
        app:layout_constraintVertical_bias="0.388" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/smartFeedingBtn"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:layout_marginTop="56dp"
        android:text="Smart Mode"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="24sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/intervalModeBtn"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:text="Interval Mode"
        android:textAllCaps="true"
        android:textSize="22dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smartFeedingBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scheduleModeBtn"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:text="Schedule Mode"
        android:textAllCaps="true"
        android:textSize="22dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intervalModeBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>