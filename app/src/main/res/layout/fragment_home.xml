<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageButton
        android:id="@+id/powerBtn"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:background="@drawable/power_off_circular"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_lock_power_off"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/refillBtn"
        android:layout_width="159dp"
        android:layout_height="112dp"
        android:background="@drawable/refill_button_circular"
        android:text="@string/refill_button"
        android:textSize="17sp"
        android:textStyle="bold"
        app:icon="@drawable/icon_refresh"
        app:iconTint="@color/white"
        app:iconGravity="top"
        app:iconPadding="1dp"
        app:iconSize="70dp"
        app:rippleColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <com.ekn.gruzer.gaugelibrary.HalfGauge
        android:id="@+id/foodLevelSensor"
        android:layout_width="325dp"
        android:layout_height="342dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>